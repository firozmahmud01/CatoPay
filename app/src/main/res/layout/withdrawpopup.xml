<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/withdrawpopup_amount_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/withdrawpopup_payment_method"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Payment Method"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/withdrawpopup_amount_edittext"
        app:layout_constraintStart_toStartOf="@+id/withdrawpopup_amount_edittext"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Payment Method Id"
        app:layout_constraintStart_toStartOf="@+id/withdrawpopup_amount_edittext"
        app:layout_constraintTop_toBottomOf="@+id/withdrawpopup_amount_edittext" />

    <Spinner
        android:id="@+id/withdrawpopup_method_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/withdrawpopup_payment_method"
        app:layout_constraintTop_toBottomOf="@+id/withdrawpopup_payment_method" />

    <Button
        android:id="@+id/withdrawpopup_submit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:text="SUBMIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/withdrawpopup_payment_method"
        app:layout_constraintStart_toStartOf="@+id/withdrawpopup_payment_method"
        app:layout_constraintTop_toBottomOf="@+id/withdrawpopup_method_spinner" />
</androidx.constraintlayout.widget.ConstraintLayout>